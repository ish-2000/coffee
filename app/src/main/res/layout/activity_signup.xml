<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="534dp"
        android:layout_height="1017dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zz" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_rew"
        android:contentDescription="login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/backbtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-100dp"
        tools:layout_editor_absoluteY="30dp">

        <EditText
            android:id="@+id/sname"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#B1ADAD" />

        <EditText
            android:id="@+id/semail"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_marginLeft="40dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#B1ADAD" />

        <EditText
            android:id="@+id/sepassword"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:layout_marginLeft="40dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Enter password"
            android:inputType="numberPassword"
            android:textColorHint="#B1ADAD" />

        <EditText
            android:id="@+id/scpassword"
            android:layout_width="320dp"
            android:layout_height="57dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Re-enter password"
            android:inputType="numberPassword"
            android:textColorHint="#B1ADAD" />

        <Button
            android:id="@+id/sbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:backgroundTint="@color/btn"
            android:layout_marginTop="40dp"
            android:layout_marginRight="70dp"
            android:textColor="@color/white"
            android:text="Signup" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:text="Or Sign in with"
            android:textColor="#FFFFFF" />

        <!-- Horizontal LinearLayout to hold fbbtn and instabtn -->
        <LinearLayout
            android:layout_width="379dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/instabtn"
                android:layout_width="94dp"
                android:layout_height="68dp"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/instalogo"
                android:contentDescription="."
                />

            <ImageButton
                android:id="@+id/fbbtn"
                android:layout_width="85dp"
                android:layout_height="89dp"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/fblogo"
                android:contentDescription="."/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
